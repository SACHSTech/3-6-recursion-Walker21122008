public class PowerFunction {
    public static int power(int base, int exponent) {

        //base case
        if (exponent == 0) {
            return 1;
        }

        //recursion case
        return base * power(base, exponent - 1);
    }

    public static void main(String[] args) {
        System.out.println(power(2, 3)); 
    }
}

